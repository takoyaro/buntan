{
	"include": ["./src/**/*"],
	"files": ["./src/index.ts", "./src/index.d.ts"],
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext"],
		"module": "esnext",
		"rootDir": "./src",
		"moduleResolution": "nodenext",
		"baseUrl": "./",
		"resolveJsonModule": true,
		"allowJs": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"ts-node": {
		"esm": true
	}
}
